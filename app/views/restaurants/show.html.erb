
<h2>Restaurant info</h2>
<ul>
<li><%= @restaurant.phone_number %></li>
<li><%= @restaurant.address %></li>
<li><%= @restaurant.category %></li>
</ul>
<ul>

<h2>Reviews</h2>
<% @restaurant.reviews.each do |review| %>
<li><%= review.content.inspect %></li>
<% end %>
</ul>
<%= link_to "Delete", restaurant_path(@restaurant),
data: {turbo_method: :delete, turbo_confirm: "Deleted"} %>
<%= link_to "Add review", new_restaurant_review_path(@restaurant) %>
